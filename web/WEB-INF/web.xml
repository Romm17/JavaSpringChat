<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>controllers.IndexController</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>

    <!--servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>*.jsp</url-pattern>
    </servlet-mapping-->

    <servlet>
        <servlet-name>Messager</servlet-name>
        <servlet-class>controllers.MessageController</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>Messager</servlet-name>
        <url-pattern>/message</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Accessor</servlet-name>
        <servlet-class>controllers.AccessController</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>Accessor</servlet-name>
        <url-pattern>/access</url-pattern>
    </servlet-mapping>

</web-app>